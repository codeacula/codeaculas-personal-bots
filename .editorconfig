# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
indent_size = 4

[*.py]
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.css]
indent_size = 2

[*.sql]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[{*.md,*.txt}]
indent_size = 2
